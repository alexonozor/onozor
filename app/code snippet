         <%= question.user.intrest  %>
         <%= link_to "<i class='#{question.favourited?(current_user)? 'fa fa-heart favorite-color' : 'fa fa-heart-o' if current_user }'></i> ".html_safe, toggle_favourite_path(question.id), :method => "post", class:'pull-right move-left', id:"favorite-#{question.id}", :title => "favourited by #{pluralize question.favourites_count, 'person'}", 'data-toggle' => 'tooltip', 'data-placement' => 'left',  :remote => true %>
     </div>

      <h2><%=link_to question.name, question, class: "question-title" %></h2>

      <%=image_tag (question.picture.url(:thumb)),  class: "question-title" if question.picture.present? %>
      <p><%= truncate (strip_tags question.body), length: 150 %></p>

      <%#= raw question.tag_list.map { |t| link_to t, tag_path(t), class:'tags' }.join('') %>
     <div class="votes-button">
      <%= allow_ajax_only_if_user_is_signin_for_upvote(question) %>
       <span id='vote-count-<%= question.id %>' class='vote-count'><%= question.votes %></span>
      <%= allow_ajax_only_if_user_is_signin_for_downvote(question) %>
     </div>
      <span class="post-question-info">
        <%=link_to (pluralize question.answers_count, "Answer"), question_path(question, anchor: "answers-area")  %>
        <%=link_to (pluralize question.comments.count, "Comment"), question_path(question)  %>
        <%=link_to (pluralize question.views, "View"), question_path(question) %>
