
<% if current_user %>
    <%= link_to '<i class="fa fa-thumbs-o-up"></i>'.html_safe, vote_question_path(@question.id, value: 1), method: "post", class:'vote-direction up', alt:'Up Vote' , remote: true %>
    <%=  @question.votes %>
    <%= link_to '<i class="fa fa-thumbs-o-down"></i>'.html_safe, vote_question_path(@question.id, value: -1), method: "post", class:"down", remote: true %>
<% end %>



