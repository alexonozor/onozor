<div class="clear"></div>
<div>
  <% if current_user.nil? %>
      <p class="alert alert-danger text-center"><%= link_to "sign in or sign up", new_user_session_path %> to post a Answer.</p>
  <% elsif cannot? :create, :answers %>
      <p class="alert alert-danger">You have been banned from creating Answers.</p>
  <% else %>
      <!-- POST -->
      <div class="post row">
        <%= form_for @answer, class: 'form-horizontal form', :remote => true do |f| %>
            <%= f.hidden_field :question_id  %>
            <%= f.hidden_field :user_id %>
            <div class="topwrap">
              <div class="posttext pull-left">
                <div class="textwraper">
                  <div class="postreply">Post a Reply</div>
                  <%= f.text_area :body, :class=>"post_form", id:"reply", placeholder:"Type your message here", style:'margin: 0px; width: 517px; height: 51px;' %>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>
            <div class="postinfobot">

              <div class="notechbox pull-left">
                <input type="checkbox" name="note" id="note" class="form-control" />
              </div>

              <div class="pull-left">
                <label for="note"> Email me when some one post a reply</label>
              </div>

              <div class="pull-right postreply">
                <div class="pull-left smile"><a href="#"><i class="fa fa-smile-o"></i></a></div>
                <div class="pull-left">
                  <%= f.submit (@answer.new_record? ? "Post Answer" : "Update Answer"), class:'btn btn-primary' %>
                </div>
                <div class="clearfix"></div>
              </div>

              <div class="clearfix"></div>
            </div>
        <% end %>
      </div><!-- POST -->
  <% end %>
</div>
