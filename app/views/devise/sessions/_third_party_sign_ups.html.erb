<div class="col-lg-12 form-group">
    <%= link_to user_omniauth_authorize_path(:facebook), class: "btn  form-control facebook_button", id: 'fb-signup'  do %>
    <i class="fa fa-facebook left input-font"></i>
    Continue with Facebook
  <% end %>
</div>
<div class="col-lg-12 form-group">
    <%= link_to user_omniauth_authorize_path(:google_oauth2),  class: "btn form-control google_button", id: 'google-signup'  do %>
  <i class="fa fa-google left input-font"></i>
      Continue with Google
  <% end %>
</div>

<div class="col-lg-12 form-group">
  <%= link_to  user_omniauth_authorize_path(:twitter),  class: "btn form-control twitter_button", id: 'twitter-signup'  do %>
