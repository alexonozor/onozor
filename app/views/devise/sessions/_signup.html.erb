<p>Sign up</p>
<%= form_for(resource, as: resource_name, :builder => Judge::FormBuilder, url: registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
     <div class="form-group">
 <%= f.text_field :username, required: true, :validate => true, :label=> :false, :class=>"form-control", :placeholder=>"Username" %>
  </div>
</div>

  <div class="form-inputs">
     <div class="form-group">
 <%= f.email_field :email, required: true, :label=> :false, :class=>"form-control", :placeholder=>"Email" %>
  </div>
</div>

   <% if f.object.password_required?  %>
     <div class="form-inputs">
          <div class="form-group">
       <%= f.password_field :password, required: true, :label=> :false, :class=>"form-control", :placeholder=>"Password here" %>
      </div>
    </div>


        <div class="form-inputs">
          <div class="form-group">
       <%= f.password_field :password_comfirmation, required: true, :label=> :false, :class=>"form-control", :placeholder=>"Retype password" %>
      </div>
    </div>
     <% end %>
    <div class="form-actions">
      <button class="btn btn-success"><i class="fa fa-key"></i> Sign up</button>
      <%=link_to "<i class='fa fa-sign-in'></i> Login".html_safe, new_user_session_path, class: "btn btn-default email-signup" %>
    </div>
<% end %>
