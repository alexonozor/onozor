

    <%= form_for(resource, as: resource_name,  url: registration_path(resource_name), html: {class: "ui large form"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :username, required: true, :validate => true, :label=> :false, :placeholder=>"Username" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            <%= f.email_field :email, required: true, :label=> :false, :placeholder=>"E-mail address" %>
          </div>
        </div>
        <% if f.object.password_required?  %>
            <div class="field">
              <div class="ui left icon input">
                <i class="key icon"></i>
                <%= f.password_field :password, required: true, :label=> :false, :placeholder=>"Password here" %>
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="key icon"></i>
                <%= f.password_field :password_comfirmation, required: true, :label=> :false, :placeholder=>"Retype password" %>
              </div>
            </div>
        <% end %>
        <%= f.submit "Sign up".html_safe, class: "ui fluid large teal submit button" %>
      </div>
      <%= link_to "Sign in", new_user_session_path, class: "ui fluid basic large  submit button" %>
      <div class="ui error message"></div>

    <% end %>
