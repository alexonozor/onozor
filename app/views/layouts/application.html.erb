
<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= yield :title %></title>
  <meta name="description" content="<%= yield :content %>">
  <%= stylesheet_link_tag "application", 'https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css', media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag 'mobile' if mobile_device? %>
  <%= javascript_include_tag "application", "jquery.toaster.js", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="google-site-verification" content="MTw25N9bqtNqBh1bPIbqkopih7xcQsiQmSP7Qm7ZvV8" />

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="../assets/js/html5shiv.js"></script>
  <script src="../assets/js/respond.min.js"></script>
  <![endif]-->

  <!-- Favicons -->
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/ico/apple-touch-icon-144-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/ico/apple-touch-icon-114-precomposed.png">
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/ico/apple-touch-icon-72-precomposed.png">
  <link rel="apple-touch-icon-precomposed" href="assets/ico/apple-touch-icon-57-precomposed.png">
  <link rel="shortcut icon" href="assets/ico/favicon.png">

  <!--<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>-->


</head>
<body>

<div class="container-fluid">

  <%= render :partial => 'layouts/nav' %>

  <section class="content">
    <div class="container clear-top">
      <div class="row">
        <%= render :partial => 'layouts/leftside' %>
       <div class="col-lg-6 col-md-6">
        <%= yield %>
       </div>
        <%= render :partial => 'layouts/rightside' %>
      </div>
    </div>
  </section>

  <%= render :partial => "layouts/footer" %>

</div>



<% if current_user && current_user.categories.empty? %>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" id="select-category" data-toggle="modal" data-target="#myModal">
  Launch demo modal
</button>
<!-- <button type="button" data-toggle="modal" data-target="#myModal">Launch modal</button> -->
<% end %>


<% if current_user %>
  <%= render 'layouts/modal' %>
<% end %>

