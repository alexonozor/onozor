<% request_path ||= ""; field_to_edit ||= "Something's wrong. Please retry."; default_text ||= ""; placeholder ||= "Edit #{field_to_edit}" %>

  <%=form_for request_path, remote: true do |f| %>
    <div class="modal-body">
       <div class="form-group">
         <%= f.text_area( field_to_edit, class: "form-control", id: "message-text", placeholder: placeholder, value: default_text) %>
       </div>
       <div>
         <%= button_tag(type: 'submit',  class: "btn btn-sm btn-success right", id: 'new_direct_message') do %>
              <i class="fa fa-save"></i>&nbsp;&nbsp;Save
            <% end %>
      </div>
    </div>
  <% end %>
