<%= render partial: "layouts/navbartag" %>
<div class="banner" style="background-image: url(<%= @tag.banner.url(:timeline_picture) if  @tag.banner.present? %>)">
</div>
<div class="info-bar">
  <div class="container">
    <div class="row">
      <div class="col-md-2 img-cen">
        <%= image_tag @tag.image.url(:tag_logo), class: 'img-circle logo-setting' %>
      </div>

      <div class="col-md-8 small-screen-tagname">
        <h1><%= @tag.name %></h1>
        <p><%= @tag.short_description %></p>
      </div>

      <div class="col-md-2 small-screen-following">
        <p class="text-center" id="follow-tag-button-<%= @tag.id %>">
          <% if current_user && current_user.following_tag?(@tag) %>
            <%= render partial: 'tags/unfollow', locals: {:tag => @tag}  if current_user %>
          <% else %>
            <%= render partial: 'tags/follow', locals: {:tag => @tag}  if current_user %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="card">
        <h4 class="title-size">ABOUT THIS TAG</h4>
        <p><%= @tag.description %></p>
      </div>
    </div>

    <div class="col-md-6" style="padding: 0">
      <div class="header">
        <div class="header-notice">
          Contribute to <%= @tag.name %>. Write or share something.
        </div>
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
          <div class="btn-group link-color" role="group">
            <%= link_to "Ask question", new_question_path, class:"btn btn-border btn-lg"  %>
          </div>
          <div class="btn-group link-color" role="group">
            <%= link_to "Write story", coming_soon_index_path, class:"btn btn-border btn-lg"  %>
          </div>
          <div class="btn-group link-color" role="group">
            <!-- <button type="button" class="btn btn-default btn-lg">Share link</button> -->
            <%= link_to "Share link", coming_soon_index_path, class:"btn btn-lg"  %>
          </div>
        </div>
      </div>

      <!-- my new next navbar -->

      <!-- <div class="header">
        <div class="trending">
         <table>
           <tr>
             <td class="table-space"> Trending posts </td>
             <td class="table-active"> <a href="#"> <div> Popular </div> </a> </td>
             <td> <a href="#"> <div class="table-nav"> Recency </div> </a> </td>
             <td> <a href="#"> <div class="table-nav"> Filter </div> </a> </td>
           </tr>
         </table>
        </div>
      </div> -->

      <!-- look above -->

      <% @questions.each do |question| %>
          <div class="card questions">
            <div class="row">
              <div class="col-md-12" style="margin-bottom: -15px;">
                <div class="media">
                  <div class="media-left">
                    <%=link_to image_tag(question.user.avatar.url(:thumb), class: 'media-object img-circle media-image-settings'), question.user %>
                  </div>
                  <div class="media-body">
                    <h5 class="media-heading"><%= link_to  (question.user.fullname? ? question.user.fullname : question.user.username), user_path(question.user), class:"user-link-color" %> <small>asked a question Â·<%= time_ago_in_words question.created_at %></small></h5>
                    <p><small>@<%= question.user.username %>, interested in <%=  question.user.categories.map{|a| a.name }.take(3).join(", ").html_safe %></small></p>
                  </div>
                </div>
                <h4><%= link_to question.name.capitalize, question, class:"text-inverse link-black" %></h4>
                <p class="text-small">
                  <small><%= truncate (strip_tags question.body), length: 150 %></small>
                </p>
                 <div class="row">
                   <div class="col-md-12">
                     <ul class="list-inline" style="margin-bottom: 0px;">
                       <li>
                         <%= allow_ajax_only_if_user_is_signin_for_upvote_question(question) %>
                       </li>
                       <li><span id='vote-count-<%= question.id %>' class='vote-count'><%= question.votes %></span></li>
                       <li>
                          <%= allow_ajax_only_if_user_is_signin_for_downvote_question(question) %>
                       </li>
                       <li>
                        <p class="action-footer">
                          <%= link_to "<i class='fa fa-comments-o' aria-hidden='true'></i> #{question.answers_count }".html_safe, question %>
                        </p>
                       </li>

                       <li class="pull-right">
                           <div class="dropdown action-footer">
                            <i class="fa fa-share-alt" aria-hidden="true" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></i>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                              <li><a target='_blank' href="https://www.facebook.com/dialog/share?app_id=484766111702543&href=<%= question_url(question) %>redirect_uri=http://www.onozor.com">Facebook</a></li>
                              <li><a target='_blank' href="https://twitter.com/share?url=<%= question_url(question) %>&text=<%= question.name %>">Twitter</a></li>
                              <li><a target='_blank' href="#">Reddit</a></li>
                              <li><a target='_blank' href="https://www.linkedin.com/cws/share?url=<%= question_url(question) %>">linkedin</a></li>
                              <li><a target='_blank' href="https://plus.google.com/share?url=http://<%= question_url(question) %>">Google Plus</a></li>
                              <li><a target='_blank' href="http://news.ycombinator.com/submitlink?u=<%= question_url(question) %>&t=<%= question.name %>">Y-news</a></li>
                            </ul>
                          </div>

                       </li>

                       <li class="pull-right">
                         <p class="action-footer">
                           <%= link_to "<i class='#{question.favourited?(current_user)? 'fa fa-star-o yellow' : 'fa fa-star  icon' if current_user }' id='favorite-#{question.id}'></i> ".html_safe, toggle_favourite_path(question.id), :method => "post",   :remote => true %>
                         </p>
                       </li>
                     </ul>
                   </div>
                 </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>


    <div class="col-md-3">
      <div class="card">
        <h4 class="title-size"><%= @tag.name.capitalize %> statistics</h4>
        <p class="statistics"> <%= @tag.users.count %>
          <p class="statistics-color"> Followers</p>
        </p>


        <p class="statistics color-2"> <%= @tag.taggings_count %>
          <p class="statistics-color"> Total posts </p>
        </p>
      </div>


      
      <!-- look above -->
    </div>
  </div>
</div>

