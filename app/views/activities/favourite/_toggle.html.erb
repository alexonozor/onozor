
<% if activity.trackable.present? %>
    <%= link_to question_path(activity.trackable.question, notification_id: activity.id) do %>
        <p>
          <strong><%=  activity.trackable.user.fullname.humanize  %></strong> favourite your question: <%=  activity.trackable.question.name %><br />
          <i class="fa fa-heart"></i> <small><%= time_ago_in_words activity.created_at, class:'small' %> ago</small>
        </p>
    <% end %>
<% end %>