<% if activity.trackable.present? %>
    <%= link_to question_path(activity.trackable.question, notification_id: activity.id ) do %>
        <p>
          <strong><%=  activity.trackable.user.fullname.humanize  %></strong> has an answer to your <%=  activity.trackable.question.name %><br />
          <i class="fa fa-exclamation-circle"></i> <small><%= time_ago_in_words activity.created_at, class:'small' %> ago</small>
        </p>
    <% end %>
<% else %>

<% end %>