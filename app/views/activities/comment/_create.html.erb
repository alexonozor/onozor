<%  if activity.trackable.present? %>
  <% if activity.trackable.commentable.class.to_s == 'Question' %>
     <%= link_to question_path(activity.trackable.commentable, notification_id: activity.id) do %>
           <strong><%= image_tag  activity.trackable.user.avatar.url(:thumb), class: 'notification-image'  %> <%=  activity.trackable.user.fullname.humanize  %></strong> commented on your question
           <span class="ui pull-right"><%= time_ago_in_words activity.created_at, class:'small' %></span>
     <% end %>
  <% else %>
      <%= link_to question_path(activity.trackable.commentable.question,  notification_id: activity.id) do %>
            <strong><%= image_tag  activity.trackable.user.avatar.url(:thumb), class: 'notification-image'  %> <%=  activity.trackable.user.fullname.humanize  %></strong> commented on your answer to <strong><%=  activity.trackable.commentable.question.user.fullname.humanize + "'s" %></strong> question.
            <span class="ui pull-right"><%= time_ago_in_words activity.created_at, class:'small' %></span>
      <% end %>
  <% end %>
<% end %>
